.pic-view{
  display:flex;
  flex-direction:column;
  justify-content:center;
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  z-index: 40;
}
.pic-view .back-mask{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
   background-color: rgba(0, 0, 0, 0.7); 
  z-index: 40;
}
.pic-view .pic-container{
   position: fixed;
   display: flex;
   flex-direction: column;
  width:100%;
  z-index: 46;
  align-self: center;
}
.pic-view .close{

  width: 50rpx;
  height: 50rpx;
  
}

.pic-content .icon{
  width: 100%;
}