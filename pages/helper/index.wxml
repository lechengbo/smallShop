    <view class="title {{item.Id==currentId?'active':''}}"  bindtap='helperTap' data-id="{{ item.Id}} "> {{idx+1}}ã€{{ item.Title}}</view>
    <view class='contentContainer' wx:if="{{item.Id==currentId }}">
